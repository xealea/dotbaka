rofi_command="rofi -modi drun -theme ${HOME}/.config/rofi/misc/misc.rasi -show"
rofi_theme="${HOME}/.config/rofi/misc/misc.rasi"
bspwmrc="${HOME}/.config/bspwm/bspwmrc"

# Border
border_1="Showing Border Bspwm"
border_2="Remove Border Bspwm"

# Variable passed to rofi
options="$border_1\n$border_2"

chosen=$($rofi_command -p "switch the type of border" -show -dmenu -sync -selected-row 0 << EOF
$options
EOF
)

bspwm_config=$(<"$bspwmrc")
if [[ $chosen == "$border_1" ]]; then
    bspwm_config=${bspwm_config//border_width\ *\ *\ */border_width         5}
else
    bspwm_config=${bspwm_config//border_width\ *\ *\ */border_width         0}
fi
echo "$bspwm_config" > "$bspwmrc"
bspc wm -r
