# System commands
alias q='exit'
alias c='clear'
alias off='loginctl poweroff'
alias reboot='loginctl reboot'

# Github commands
alias gf='git fetch'
alias gc='git clone'
alias gcp='git cherry-pick'
alias grh='git reset --hard'
alias gm='git merge FETCH_HEAD'
alias gcpm1='git cherry-pick -m1'

# Ping commands
alias pg='ping 8.8.8.8'
alias pc='ping 1.1.1.1'

# Xbps commands
alias xdo='sudo xdowngrade'
alias depsx='xbps-query -x'
alias xquery='xbps-query -s'
alias rmx='sudo xbps-remove'
alias xipkg='sudo xbps-install --repository=hostdir/binpkgs${1:+/$1}'
alias rmxo='sudo xbps-remove --remove-orphans'

# etc commands
alias ssh='bash ~/.scripts/ssh'
alias ncmpcpp='bash ~/.ncmpcpp/ncmpcpp-ueberzug/ncmpcpp-ueberzug'
